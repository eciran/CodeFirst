
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <a class="btn btn-success" href="/Home/YeniOlustur">Add New Student</a>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <td>Name</td>
                    <td>desc</td>
               
                    <td>Edit & Delete</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CategoryName</td>
                        <td>@item.CategoryDesc</td>

                        <td>
                            <a class="btn btn-warning" href="/Home/Edit/@item.CategoryID">Edit</a>
                            <a class="btn btn-danger" href="/Home/Delete/@item.CategoryID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
